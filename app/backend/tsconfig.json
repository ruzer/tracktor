{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "paths": {
      "@config": [
        "./src/config"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@controllers": [
        "./src/controllers"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@db": [
        "./src/db"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@exceptions": [
        "./src/exceptions"
      ],
      "@exceptions/*": [
        "./src/exceptions/*"
      ],
      "@models": [
        "./src/models"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@routes": [
        "./src/routes"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@services": [
        "./src/services"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@middleware": [
        "./src/middleware"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}